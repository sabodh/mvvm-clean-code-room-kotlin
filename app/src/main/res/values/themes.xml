<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.People" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_red</item>
        <item name="colorPrimaryVariant">@color/brand_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/brand_red</item>
        <item name="android:windowBackground">@color/brand_red</item>
    </style>

    <style name="ThemeOverlay.People.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/white</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>

    <style name="BlackText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22dp</item>
    </style>
    <style name="BlackText.Normal" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="BlackText.MidLevel">
        <item name="android:textSize">18dp</item>
    </style>
    <style name="BlackText.MinLevel">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black_overlay</item>
    </style>
    <style name="BlackText.Large" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24dp</item>
        <item name="android:starStyle">@style/BlackText</item>

    </style>
</resources>